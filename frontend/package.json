{
    "name": "fantstatic",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "dependencies": {
        "animejs": "^3.2.0"
    },
    "devDependencies": {
        "@fullhuman/postcss-purgecss": "^2.3.0",
        "@rollup/plugin-commonjs": "^11.0.1",
        "@rollup/plugin-node-resolve": "^7.0.0",
        "automake": "^0.1.4",
        "autoprefixer": "^9.8.6",
        "axios": "^0.20.0",
        "chart.js": "^2.9.3",
        "compress-images": "^1.9.5",
        "cssnano": "^4.1.10",
        "dotenv": "^8.2.0",
        "empty-folder": "^2.0.4",
        "gifsicle": "^5.1.0",
        "gsap": "^3.5.1",
        "html-includes": "^4.3.3",
        "https-localhost": "^4.6.2",
        "leaflet": "^1.7.1",
        "local-ssl-proxy": "^1.3.0",
        "node-sass": "^4.14.1",
        "npm-run-all": "^4.1.5",
        "pngquant-bin": "^6.0.0",
        "postcss-cli": "^7.1.2",
        "rollup": "^1.16.2",
        "rollup-plugin-terser": "^5.0.0",
        "serve": "^11.0.2",
        "tailwindcss": "^1.8.6"
    },
    "scripts": {
        "clear:dist": "node ./config/empty-dist.js",
        "clear:public": "node ./config/empty-public.js",
        "server:start": "serve dist",
        "server:start:hot-reload": "lr | serve dist",
        "server:https": "local-ssl-proxy --config config/https.json",
        "build:tailwind:dist": "postcss ./_dev/style/outputs/tailwind.css -o dist/style/outputs/tailwind.css",
        "build:tailwind:public": "postcss ./_dev/style/outputs/tailwind.css -o public/style/outputs/tailwind.css",
        "watch:html": "html-includes --watch --src _dev/html --dest dist",
        "build:html:dist": "html-includes --src src --dest dist",
        "build:html:public": "html-includes --src _dev/html --dest public --minify",
        "watch:scss": "node-sass --watch _dev/style/outputs/main.scss -o dist/style/outputs --output-style",
        "build:scss:dist": "node-sass --watch _dev/style/outputs/main.scss -o dist/style/outputs --output-style",
        "build:scss:public": "node-sass _dev/style/outputs/main.scss -o public/style/outputs --output-style --compressed",
        "watch:js:dist": "rollup -c -w",
        "build:js:public": "rollup -c",
        "compress:imgs:dist": "node ./config/compress-images-dist.js",
        "compress:imgs:public": "node ./config/compress-images-public.js",
        "dev": "npm-run-all --parallel clear:dist watch:html build:tailwind:dist watch:scss watch:js:dist compress:imgs:dist server:start",
        "dev:hot-reload": "npm-run-all --parallel clear:dist compress:imgs server:start:hot-reload watch:html watch:scss watch:js",
        "build": "npm-run-all --parallel clear:public build:html:public build:tailwind:public build:scss:public build:js:public compress:imgs:public"
    },
    "author": "web_disciple",
    "license": "ISC"
}
